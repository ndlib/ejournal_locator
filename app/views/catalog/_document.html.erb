    <% # container for a single doc -%>
    <div class="document <%= render_document_class document %>">
      
      <% # header bar for doc items in index view -%>
      <div class="documentHeader">
        
        <% # bookmark/folder functions for items/docs -%>
        <%= render_index_doc_actions document %>
        
        <% # main title container for doc partial view -%>
        <div class="yui-u">
          <h3 class="index_title"><%= document_counter + 1 + @response.params[:start].to_i %>. <%= link_to_document document, :label=>document_show_link_field, :counter => (document_counter + 1 + @response.params[:start].to_i) %>
          <%= link_to image_tag('sfx.gif'), "http://findtext.library.nd.edu:8889/ndu_local?url_ver=Z39.88-2004&ctx_ver=Z39.88-2004&ctx_enc=info:ofi/enc:UTF-8&rfr_id=info:sid/ND_ejl_loc&url_ctx_fmt=info:ofi/fmt:kev:mtx:ctx&svc_val_fmt=info:ofi/fmt:kev:mtx:sch_svc&sfx.ignore_date_threshold=1&rft.object_id=#{document.id.gsub(/^journal-/,'')}", :target => "_blank" %>
          </h3>
        </div>
      </div>
      
      <% # main container for doc partial view -%>
      <%= render_document_partial document, :index %>

    </div>
